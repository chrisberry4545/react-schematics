{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsChrisBReactComponents",
  "title": "React components schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Component name",
      "x-prompt": "What do you want the name of your component to be?"
    },
    "path": {
      "type": "string",
      "description": "Path to component",
      "x-prompt": "What do you want the path of your component to be?"
    },
    "connected": {
      "type": "string",
      "description": "Is the component connected to the store?",
      "default": "true",
      "enum": ["true", "false"]
    },
    "scss": {
      "type": "string",
      "description": "Should a scss file be included?",
      "default": "true",
      "enum": ["true", "false"]
    }
  },
  "required": ["name", "path"]
}
